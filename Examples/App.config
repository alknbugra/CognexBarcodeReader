<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
    
    <!-- Cognex Barcode Reader Demo Uygulaması Konfigürasyonu -->
    
    <appSettings>
        <!-- Debug ayarları -->
        <add key="DebugMode" value="true" />
        <add key="LogLevel" value="Info" />
        
        <!-- Timeout ayarları -->
        <add key="DefaultTimeout" value="5000" />
        <add key="ConnectionTimeout" value="10000" />
        
        <!-- Seri port ayarları -->
        <add key="DefaultBaudrate" value="115200" />
        <add key="AutoDiscovery" value="true" />
        
        <!-- Thread ayarları -->
        <add key="ThreadSleep" value="20" />
        <add key="MaxRetries" value="3" />
        
        <!-- Dosya ayarları -->
        <add key="LogFilePath" value="barcode_log.txt" />
        <add key="ConfigFilePath" value="barcode_config.txt" />
        <add key="MaxHistoryItems" value="100" />
    </appSettings>
    
    <!-- Logging konfigürasyonu -->
    <system.diagnostics>
        <trace autoflush="true">
            <listeners>
                <add name="consoleListener" 
                     type="System.Diagnostics.ConsoleTraceListener" />
                <add name="fileListener" 
                     type="System.Diagnostics.TextWriterTraceListener" 
                     initializeData="barcode_trace.log" />
            </listeners>
        </trace>
    </system.diagnostics>
    
    <!-- Exception handling -->
    <runtime>
        <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
            <dependentAssembly>
                <assemblyIdentity name="Cognex.DataMan.SDK.PC" 
                                  publicKeyToken="9f98866f2a3a2e78" 
                                  culture="neutral" />
                <bindingRedirect oldVersion="0.0.0.0-5.6.3.122" 
                                 newVersion="5.6.3.122" />
            </dependentAssembly>
        </assemblyBinding>
    </runtime>
</configuration>
